<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Data Table</title>
    <link rel="stylesheet" href="/style.css">
</head>

<body>
     <div class="table-container">
    <h2>Student Records</h2>
    <table>
      <thead>
        <tr>
          <th>Full Name</th>
          <th>Age</th>
          <th>Address</th>
          <th>Grades</th>
          <th>Total Marks</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (Array.isArray(data) && data.length > 0) { %>
          <% for (let student of data) { %>
            <tr>
              <td><%= student.fullname %></td>
              <td><%= student.age %></td>
              <td><%= student.address %></td>
              <td><%= student.grades %></td>
              <td><%= student.TotalMarks %></td>
              <td>
                <div class="action-buttons">
                  <a href="/form/<%= student.id %>/update" class="btn btn-update">Update</a>

                  <form action="/form/<%= student._id %>/table?_method=DELETE" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-delete"
                      onclick="return confirm('Are you sure you want to delete this student?')">
                      Delete
                    </button>
                  </form>
                </div>
              </td>
            </tr>
          <% } %>
        <% } else { %>
          <tr>
            <td colspan="6" style="text-align:center;color:#6b7280;">
              No students found
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>

    <a href="http://localhost:3030/form" class="btn back-btn">Back</a>
  </div>

</body>

</html>